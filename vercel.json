{
    "version": 2,
    "name": "Social Media",
    "builds":[
        {
            "src": "src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/microService/mysql/index.js",
            "use": "@vercel/node-server"
        },
        {
            "src": "src/microService/post/index.js",
            "use": "@vercel/node-server"
        }
    ],
    "routes": [
        {
            "src": "/api/auth (.*)",
            "dest": "src/index.js"
        },
        {
            "src": "/api/user (.*)",
            "dest": "src/index.js"
        },
        {
            "src": "/post (.*)",
            "dest": "src/microService/post/index.js"
        }
    ]
}